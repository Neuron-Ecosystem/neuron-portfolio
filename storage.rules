rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Функция проверки размера (10MB)
    function isValidSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    match /achievements/{achId}/documents/{fileName} {
      allow read: if true;
      allow write: if request.auth != null 
                   && isValidSize()
                   // Запрет на перезапись чужого (для простоты - разрешаем create)
                   && (request.resource.contentType.matches('image/.*') || request.resource.contentType == 'application/pdf');
      allow delete: if false; // Удаление только через Cloud Function (системно)
    }
  }
}
