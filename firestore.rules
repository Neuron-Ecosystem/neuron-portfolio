rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Вспомогательная функция проверки роли
    function hasRole(role) {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    function isActive() {
       return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isActive == true;
    }

    // 1. Инвайт-коды
    // Чтение: нужно, чтобы проверить валидность перед регистрацией.
    // Запись: только при регистрации (пометить used) или админ.
    match /invite_codes/{code} {
      allow get: if true; // Чтение конкретного кода разрешено всем (для проверки)
      allow list: if false; // Нельзя получить список всех кодов
      allow update: if request.resource.data.isUsed == true; // Можно только пометить как used
      allow create, delete: if hasRole('admin');
    }

    // 2. Пользователи
    match /users/{userId} {
      allow read: if request.auth.uid == userId || hasRole('admin') || hasRole('moder');
      allow create: if request.auth.uid == userId; // При регистрации
      allow update: if hasRole('admin'); // Только админ меняет роли/блокирует
    }

    // 3. Достижения
    match /achievements/{achId} {
      allow read: if true; // Публичный доступ
      allow create: if isActive() && hasRole('people');
      allow update: if isActive() && (hasRole('moder') || hasRole('admin'));
      allow delete: if hasRole('admin');
    }
  }
}
